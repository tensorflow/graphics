{
  "Description" : [ "This experiment learns a shape representation for tables ",
                    "using data from ShapeNet version 2." ],
  "DataSource" : "data",
  "TrainSplit" : "examples/splits/sv2_tables_train.json",
  "TestSplit" : "examples/splits/sv2_tables_test.json",
  "NetworkArch" : "deep_sdf_decoder",
  "NetworkSpecs" : {
    "dims" : [ 512, 512, 512, 512, 512, 512, 512, 512 ],
    "dropout" : [0, 1, 2, 3, 4, 5, 6, 7],
    "dropout_prob" : 0.2,
    "norm_layers" : [0, 1, 2, 3, 4, 5, 6, 7],
    "latent_in" : [4],
