  "SnapshotFrequency" : 1000,
  "AdditionalSnapshots" : [ 100, 500 ],
  "LearningRateSchedule" : [
    {
      "Type" : "Step",
      "Initial" : 0.0005,
      "Interval" : 500,
      "Factor" : 0.5
    },
    {
      "Type" : "Step",
      "Initial" : 0.001,
      "Interval" : 500,
      "Factor" : 0.5
    }],
  "SamplesPerScene" : 16384,
  "ScenesPerBatch" : 64,
